<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
      <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <main>
      <nav class="navbar">
        <ul class="navbar-list">
          <li>
            <a href="#">Home</a>
          </li>
          <li>
            <a href="#">Open sidebar</a>
          </li>
          <li>
            <a href="#">Change theme</a>
          </li>
        </ul>
      </nav>
      <h1>Todos</h1>
      <ul id="list">
        <!-- Server side rendering -->
        <% todos.forEach(function(todo) { %>
        <li>
          <%= todo %>
        </li>
        <% }); %>
      </ul>
      <form id="form">
        <input id="todo-field" type="text" name="search" placeholder="search">
      </form>
    </main>

    <!-- Modern practices, would use a bundle (webpack) -->
    <script src="/javascripts/test.js"></script>
  </body>

</html>